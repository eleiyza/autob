hereimport 'dart:io';

void main() {
  List<String> inventory = ['apple', 'banana', 'carrot', 'dates'];

  int option = 0;

  while (true) {
    print(' ');
    print('Initial Inventory: $inventory');
    print('Please select an operation to do:');
    print('[1] Add New Product in the inventory');
    print('[2] Remove a Product from the inventory');
    print('[3] Display the total number of items in the inventory');
    print('[4] Search for an item and display if it is available or not');
    print('[5] Sort the inventory list alphabetically');
    print('[6] Exit');

    stdout.write('You have selected: ');
    option = int.parse(stdin.readLineSync()!);

    if (option == 1) {
      stdout.write('Please enter a product you want to add to the list: ');
      String? newProduct = stdin.readLineSync();
      if (newProduct != null) {
        addProduct(inventory, newProduct);
      }
    } else if (option == 2) {
      stdout.write('Please enter a product you want to remove from the list: ');
      String? removeProduct = stdin.readLineSync();
      if (removeProduct != null) {
        removeProductFromInventory(inventory, removeProduct);
      }
    } else if (option == 3) {
      print('Total items: ${getTotalItems(inventory)}');
    } else if (option == 4) {
      stdout.write('Please enter a product you want to search in the list: ');
      String? searchProduct = stdin.readLineSync();
      if (searchProduct != null) {
        isProductAvailable(inventory, searchProduct);
      }
    } else if (option == 5) {
      sortInventory(inventory);
      print('Sorted Inventory: $inventory');
    } else if (option == 6) {
      break;
    } else {
      print('Invalid Input. Enter valid option');
    }
  }
}

void addProduct(List<String> inventory, String newProduct) {
  if (newProduct.isNotEmpty) {
    inventory.add(newProduct);
    print('The updated product list is as follows: $inventory');
  }
}

void removeProductFromInventory(List<String> inventory, String removeProduct) {
  if (inventory.contains(removeProduct)) {
    inventory.remove(removeProduct);
    print('Updated Inventory after removal: $inventory');
  } else {
    print('$removeProduct not found in the inventory.');
  }
}

int getTotalItems(List<String> inventory) {
  return inventory.length;
}

bool isProductAvailable(List<String> inventory, String searchProduct) {
  if (inventory.contains(searchProduct)) {
    print('$searchProduct is available in the inventory.');
  } else {
    print('$searchProduct is not available in the inventory.');
  }
  return inventory.contains(searchProduct);
}

void sortInventory(List<String> inventory) {
  inventory.sort();
}
